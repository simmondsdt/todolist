<h1>My items</h1>
<hr />

<ul>
  <% @items.each do |item| %>
  <li>
    <%= item.name %> (
    <%= link_to 'Edit', edit_item_path(item) %> --
    <%= link_to 'Delete', item_path(item), method: :delete, data: {confirm: "Do you want to delete this item item?"} %> )
    <h5>--- <%= item.description %> </h5>
  </li>
  <% end %>
</ul>


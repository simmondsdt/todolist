<h2>My items</h2>
<hr />

<div class='lists'>
  <ul>
    <% @items.each do |item| %>
    <li>
      <%= item.name %>
      <h5>- <%= item.description %> </h5>
    </li>
</div>
<div class='navbar'>
    <p> <%= link_to 'Show', item_path(item) %> </p>
    <p> <%= link_to 'Edit', edit_item_path(item) %> </p>
    <p> <%= link_to 'Delete', item_path(item), method: :delete, data: {confirm: "Do you want to delete this item item?"} %> </p>
</div>
    <% end %>
  </ul>

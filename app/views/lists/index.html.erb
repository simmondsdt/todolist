<h2>My Lists</h2>
<hr />

<div class='lists'>
  <ul>
    <% @lists.each do |list| %>
    <li>
      <%= list.name %>
      <h5>- <%= list.description %> </h5>
    </li>
</div>
<div class='navbar'>
    <%= link_to 'Show', list_path(list) %>
    <%= link_to 'Edit', edit_list_path(list) %>
    <%= link_to 'Delete', list_path(list), method: :delete, data: {confirm: "Do you want to delete this list?"} %>
</div>
    <% end %>
  </ul>
